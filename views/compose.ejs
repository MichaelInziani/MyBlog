<%- include("./partials/header"); -%>

  <h1>Compose</h1>

  <form action="/compose" method="post">
    <div class="mb-3">
      <label for="Title" class="form-label">Title</label>
      <input type="text" class="form-control" id="Title" placeholder="Title" name="postTitle" autocomplete="off">
    </div>
    <div class="mb-3 form-group">
      <label for="post" class="form-label">Post</label>
      <textarea name="postBody" class="form-control" id="post" rows="3" placeholder="Content"></textarea>
    </div>
    <div class="mb-3">
      <label for="Author" class="form-label">Author</label>
      <input type="text" class="form-control" id="Author" placeholder="Author" name="authorName" autocomplete="off">
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </form>

